
<%= link_to products_path do %>
  <div class="back-button-fixed">
    <div class="nav-small-link-design">retour</div>
  </div>
<% end %>



<div class="banner-product-page-show" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(<%= if @product.photos.any? then cl_image_path @product.photos.last.path end %>);">



  <div class="banner-product-show-description">
    <div class="show-description-item"><%= @product.title %></div>
    <div class="info-icon" style="background-image: url(<%= if @product.brand == nil then "" else  cl_image_path @product.brand.logo.path end %>);"></div>
  </div>



</div>





<div class="infos-fullpage-show">

    <div class="infos-product-title">

        <div class="product-title-container-show">
          <div class="pro-header-top">Produit</div>

          <% if @product.type.name == "volet roulant" %>
              <div class="product-show-big-title color-one-text"><%= @product.title %></div>
          <% elsif @product.type.name == "store interieur" %>
              <div class="product-show-big-title color-two-text"><%= @product.title %></div>
          <% elsif @product.type.name == "store exterieur" %>
              <div class="product-show-big-title color-three-text"><%= @product.title %></div>
          <% elsif @product.type.name == "pergola" %>
              <div class="product-show-big-title color-four-text"><%= @product.title %></div>
          <% elsif @product.type.name == "menuiserie" %>
              <div class="product-show-big-title color-five-text"><%= @product.title %></div>
          <% elsif @product.type.name == "moustiquaire" %>
              <div class="product-show-big-title color-six-text"><%= @product.title %></div>
          <% elsif @product.type.name == "porte de garage" %>
              <div class="product-show-big-title color-seven-text"><%= @product.title %></div>
          <% else %>
              <div class="product-show-big-title"><%= @product.title %></div>
          <% end %>

        </div>

        <div class="product-title-container">
          <div class="pro-header-top">Type</div>
          <div class="product-show-big-title-alt"><%= @product.type.name %></div>
        </div>

        <div class="product-title-container">
          <div class="pro-header-top">Marque</div>
          <div class="product-show-big-title-alt"><%= if @product.brand == nil then "" else @product.brand.name end %></div>
        </div>


        <% if user_signed_in? %>

          <div class="product-title-container">
            <%= link_to dashboard_path do %>
              <i class="fa fa-code-fork" aria-hidden="true"></i>
            <% end %>
          </div>

        <% end %>



    </div>









    <% @product.infos.each do |info| %>



      <div class="info-item-show">

        <div class="info-icon-show" style="background-image: url(<%= cl_image_path info.icon.path %>);"></div>

        <div class="info-title-color-show"><%= info.title %>&nbsp;</div>

        <div class="info-title-color-content-show"><%= info.content %>&nbsp;</div>

      </div>

    <% end %>


</div>
