

<div>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs tabs" role="tablist">

    <li role="presentation" class="active">
      <a href="#one" aria-controls="home" role="tab" data-toggle="tab">volets roulants</a>
    </li>
    <li role="presentation">
      <a href="#two" aria-controls="profile" role="tab" data-toggle="tab">stores intérieurs</a>
    </li>
    <li role="presentation">
