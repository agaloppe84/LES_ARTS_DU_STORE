    </li>

  </ul>



  <!-- Tab panes -->
  <div class="tab-content">


    <div role="tabpanel" class="tab-pane active" id="one">
      <div class="navtab-big-title">
        <div class="big-icon"><i class="fa fa-windows" aria-hidden="true"></i></div>
        <div class="big-title"><%= @volets_roulant.last.type.name.pluralize %></div>
        <div class="blind-count"><%= @volets_roulant.count %> produits</div>
      </div>


      <% @volets_roulant.each do |volet| %>

        <div class="product-card">

          <div class="product-card-left">

            <div class="product-card-left-item item-title"><%= volet.title %></div>
            <div class="product-card-left-item item-description"><%= volet.description %></div>

            <div class="product-card-left-item">
            <% if user_signed_in? %>
              <%= link_to edit_product_path(volet) do %>
                <div class="modif-button"><%= "Modifier #{volet.title}" %></div>
              <% end %>
            <% end %>
            </div>


            <div class="product-card-left-item">
            <% if user_signed_in? %>
              <%= link_to new_product_info_path(volet) do %>
                <div class="modif-button"><%= "Ajouter une info" %></div>
              <% end %>
            <% end %>
            </div>


            <div class="product-card-left-item item-link"><%= link_to "voir ce produit", product_path(volet), class: "navbar-wagon-brand btn" %></div>

          </div>

          <div class="product-card-right" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(<%= if volet.photos.any? then cl_image_path volet.photos.last.path end %>);">
          </div>

        </div>

      <% end %>

    </div>


    <div role="tabpanel" class="tab-pane" id="two">
