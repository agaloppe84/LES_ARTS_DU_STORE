 <div role="tabpanel" class="tab-pane" id="<%= type.id %>">



        <div class="v2-fullpage-item-01-header">
           <div class="header-hard-dashboard" style="opacity: 0.4;">Catégorie</div>
           <div style="margin-left: 8px;margin-right: 8px;"><i class="fa fa-angle-right" aria-hidden="true"></i></div>
           <div class="header-hard-dashboard"><%= composed_plurname(type.name) %></div>
        </div>


        <div class="dashv2-infos-compilated-alt">
          <div class="dashv2-infos-compilated-item">
            <div class="v2-big-type-color" style="background-color: <%= type.color %>;"></div>
            <div class="dashv2-infos-compilated-item-label">Couleur</div>
          </div>
          <div class="dashv2-infos-compilated-item">
            <div class="v2-big-number"><%= type.products.count %></div>
            <div class="dashv2-infos-compilated-item-label">Produits</div>
          </div>
          <%= link_to "#productNewModal", class: "", data: { toggle: "modal", typeid: "#{type.id}" } do %>

                  <div class="v4-info-new-button" style="color: rgba(55,55,55,0.7);">
                    <i class="fa fa-plus-circle" aria-hidden="true" style="color: <%= type.color %>;"></i>
                    <div class="v5-text-on-button-hover">
                      <div class="">Créer un produit</div>
                      <i class="fa fa-angle-right animated infinite pulse" aria-hidden="true" style="font-size: 15px;margin-left: 10px;"></i>
                    </div>
                  </div>


          <% end %>

        </div>


    <div class="dashboardv2-left-menu">
      <ul class="nav nav-pills nav-stacked">
        <% type.products.each_with_index do |product, index| %>


              <% if index == 0 %>
            <li role="presentation" class="other-active-to-remove">
              <div class="menu-icon-show"><i class="fa fa-circle" aria-hidden="true" style="color: <%= type.color %>;"></i></div>
              <a href="#<%= "#{product.id}" + "produit" + "#{type.id}" %>" data-toggle="tab" class="add-active-to-tab"><%= product.title %></a>
              <div class="v2-link-on-active">
                <%= link_to "#productEditModal", class: "", data: { toggle: "modal", typeid: "#{type.id}", productid: "#{product.id}" } do %>
                    <div class="text-on-edit-hover" style="color: <%= type.color %>;">Modifier</div>
                    <i class="fa fa-pencil" aria-hidden="true" style="color: <%= type.color %>;"></i>
                <% end %>
                <%= link_to "#productShowModal", class: "", data: { toggle: "modal", typeid: "#{type.id}", productid: "#{product.id}" } do %>
                    <div class="text-on-edit-hover" style="color: <%= type.color %>;">Voir</div>
                    <i class="fa fa-eye" aria-hidden="true" style="color: <%= type.color %>;"></i>
                <% end %>
                <%= link_to type_product_path(type,product), method: :delete, class: "v3-link", data: { confirm: "Etes-vous sûr de vouloir supprimer ce produit ?" } do %>
                    <div class="text-on-destroy-hover" style="color: <%= type.color %>;">Supprimer</div>
                    <i class="fa fa-times" aria-hidden="true" style="color: <%= type.color %>;"></i>
                <% end %>
              </div>
            </li>
        <% else %>
            <li role="presentation" class="other-active-to-remove">
              <div class="menu-icon-show"><i class="fa fa-circle" aria-hidden="true" style="color: <%= type.color %>;"></i></div>
              <a href="#<%= "#{product.id}" + "produit" + "#{type.id}" %>" data-toggle="tab"><%= product.title %></a>
              <div class="v2-link-on-active">
                <%= link_to "#productEditModal", class: "", data: { toggle: "modal", typeid: "#{type.id}", productid: "#{product.id}" } do %>
                    <div class="text-on-edit-hover" style="color: <%= type.color %>;">Modifier</div>
                    <i class="fa fa-pencil" aria-hidden="true" style="color: <%= type.color %>;"></i>
                <% end %>
                <%= link_to "#productShowModal", class: "", data: { toggle: "modal", typeid: "#{type.id}", productid: "#{product.id}" } do %>
                    <div class="text-on-edit-hover" style="color: <%= type.color %>;">Voir</div>
                    <i class="fa fa-eye" aria-hidden="true" style="color: <%= type.color %>;"></i>
                <% end %>
                <%= link_to type_product_path(type, product), method: :delete, class: "v3-link",data: { confirm: "Etes-vous sûr de vouloir supprimer ce produit ?" } do %>
                    <div class="text-on-destroy-hover" style="color: <%= type.color %>;">Supprimer</div>
                    <i class="fa fa-times" aria-hidden="true" style="color: <%= type.color %>;"></i>
                <% end %>
              </div>
            </li>
        <% end %>



        <% end %>
      </ul>
    </div>

    <div class="dashv2-infos-compilated-alt" style="border-top: 1px solid rgba(100,100,100,0.2);">

                <div class="dashv2-infos-compilated-item">
                  <div class="v2-big-number"><%= type.promos.count %></div>
                  <% if type.promos.count <= 1 %>
                    <div class="dashv2-infos-compilated-item-label">Promo</div>
                  <% else %>
                    <div class="dashv2-infos-compilated-item-label">Promos</div>
                  <% end %>
                </div>

                <% if type.promos.where( "current = true " ).last %>
                  <div class="v5-type-with-active-promo">
                    <div class="active-promo-green-dot"></div>
                    <div class="active-promo-green-dot-text">Promo active</div>
                  </div>
               <% end %>

                <%= link_to "#promoNewModal", class: "", data: { toggle: "modal", id: "#{type.id}" } do %>

                  <div class="v4-info-new-button" style="color: <%= type.color %>;">
                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                    <div class="v5-text-on-button-hover">
                      <div class="">Créer une promo</div>
                      <i class="fa fa-angle-right animated infinite pulse" aria-hidden="true" style="font-size: 15px;margin-left: 10px;"></i>
                    </div>
                  </div>


                <% end %>

    </div>






            <div class="v3-prod-infos-alt">

              <% if type.promos.any? %>

                <div class="infos-volets">
                    <% type.promos.each do |promo| %>

                      <div class="infos-item-boob">


                        <% if promo.current? %>
                          <div class="v5-type-with-active-promo">
                            <div class="active-promo-green-dot"></div>
                            <div class="active-promo-green-dot-text">Active</div>
                          </div>
                        <% else %>
                          <div class="v5-type-with-active-promo">
                            <div class="active-promo-green-dot" style="background-color: rgba(155,155,155,0.4);"></div>
                          </div>
                        <% end %>




                        <div class="infos-big-boob"><%= truncate( promo.title, length: 18, omission: '...' ) %></div>



                        <div class="infos-small-boob"></div>

                        <div class="v2-link-on-active-infos">
                          <%= link_to "#promoEditModal", class: "v3-link", data: { toggle: "modal", id: "#{promo.id}", typeid: "#{promo.type.id}" } do %>
                              <div class="text-on-edit-hover" style="color: <%= type.color %>;">Modifier</div>
                              <i class="fa fa-pencil" aria-hidden="true" style="color: rgba(55,55,55,0.8);"></i>
                          <% end %>
                          <%= link_to type_promo_path(type, promo), method: :delete, class: "v3-link", data: { confirm: "Etes-vous sûr de vouloir supprimer cette promo ?" } do %>
                              <div class="text-on-destroy-hover" style="color: <%= type.color %>;">Supprimer</div>
                              <i class="fa fa-times" aria-hidden="true" style="color: rgba(55,55,55,0.8);"></i>
                          <% end %>
                        </div>

                      </div>

                    <% end %>
                </div>

              <% else %>
                <div class="v4-no-promo-div">
                  <div class="v5-big-text">Pas de promo</div>
                  <div class="v4-no-promo-div-small-text" style="color: rgba(25,25,25,0.8);">Cliquez sur + pour créer une promo !!</div>
                </div>
              <% end %>

            </div>



<!--*********** ALBUMS HEADER START ***********-->


 <div class="dashv2-infos-compilated-alt" style="border-top: 1px solid rgba(100,100,100,0.2);">
                <div class="dashv2-infos-compilated-item">
                  <% if type.albums.any? %>
                    <div class="v2-big-number-brand" style="color: #52D681;">Oui</div>
                  <% else %>
                    <div class="v2-big-number-brand" style="color: #FA4659;">Non</div>
                  <% end %>
                  <div class="dashv2-infos-compilated-item-label">Album</div>

                </div>


                <% if type.albums.any? %>

                  <%= link_to "#albumEditModal", class: "", data: { toggle: "modal", albumid: "#{type.albums.last.id}", typeid: "#{type.id}" } do %>
                    <div class="v4-info-new-button" style="color: <%= type.color %>;">
                      <i class="fa fa-toggle-on" aria-hidden="true"></i>
                      <div class="v5-text-on-button-hover">
                      <div class="">Editer l'album</div>
                      <i class="fa fa-angle-right animated infinite pulse" aria-hidden="true" style="font-size: 15px;margin-left: 10px;"></i>
                    </div>
                    </div>
                  <% end %>

                <% else %>

                  <%= link_to "#albumNewModal", class: "", data: { toggle: "modal", typeid: "#{type.id}" } do %>
                    <div class="v4-info-new-button" style="color: <%= type.color %>;">
                      <i class="fa fa-plus-circle" aria-hidden="true"></i>
                      <div class="v5-text-on-button-hover">
                      <div class="">Créer un album</div>
                      <i class="fa fa-angle-right animated infinite pulse" aria-hidden="true" style="font-size: 15px;margin-left: 10px;"></i>
                    </div>
                    </div>
                  <% end %>

                <% end %>
              </div>



<!--*********** ALBUMS HEADER END ***********-->


<!--*********** ALBUMS CONTAINER START ***********-->


          <% if type.albums.any? %>


            <!--*********** SI ALBUM PRESENT ***********-->
            <div class="v3-dash-powers-container-start">

                <% type.albums.last.photos.each do |photo| %>
                    <div class="v3-power-item-cont-big">

                      <div class="v3-powers-text-on-hover-bottom" style="color: <%= type.color %>;">
                        <div class="file-type">
                          <%= photo.resource_type %>
                          <%= "  " %>
                          <%= photo.format %>
                        </div>
                        <div class="file-size">
                          <%= photo.width %>
                          <%= " X " %>
                          <%= photo.height %>
                        </div>

                      </div>

                      <div class="v3-power-item-big" style="background-image: url(<%= cl_image_path photo.path %>);"></div>
                    </div>
                <% end %>

            </div>
        <!--*********** SI ALBUM PRESENT ***********-->


          <% else %>

            <div class="v3-prod-infos-alt">
              <div class="v4-no-promo-div">
                  <div class="v5-big-text">Pas d'album</div>
                  <div class="v4-no-promo-div-small-text" style="color: rgba(25,25,25,0.8);">Cliquez sur + pour créer un album !!</div>
              </div>
            </div>

          <% end %>



<!--*********** ALBUMS CONTAINER END ***********-->

    </div>
