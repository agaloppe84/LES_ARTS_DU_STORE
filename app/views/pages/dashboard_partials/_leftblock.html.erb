 <div class="v2-fullpage-item-01">

    <div class="fullpage-overflow">


    <div class="v2-fullpage-item-01-header">
      <div class="header-hard-dashboard">Catégories</div>
    </div>


    <div class="dashv2-infos-compilated">
      <div class="dashv2-infos-compilated-item">
        <div class="v2-big-number"><%= @types.count %></div>
        <div class="dashv2-infos-compilated-item-label">Catégories</div>
      </div>



      <%= link_to "#typeNewModal", class: "", data: { toggle: "modal" } do %>
                  <div class="v4-info-new-button" style="color: rgba(55,55,55,0.7);">
                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                    <div class="v5-text-on-button-hover" style="left: -128px;">
                      <div class="">Créer une catégorie</div>
                      <i class="fa fa-angle-right animated infinite pulse" aria-hidden="true" style="font-size: 15px;margin-left: 10px;"></i>
                    </div>
                  </div>
      <% end %>

    </div>


    <div class="dashboardv2-left-menu">
      <ul class="nav nav-pills nav-stacked">
      <% @types.each_with_index do |type,index| %>
        <% if index == 0 %>
            <li role="presentation" class="active">
              <div class="menu-icon-show" style="color: <%= type.color %>;"><i class="fa fa-circle" aria-hidden="true"></i></div>
              <div class="index-on-navtabs" style="color: <%= type.color %>;"><%= "#{index + 1}" %></div>
              <a href="#<%= type.id %>" data-toggle="tab" class="reset-active-on-tab"><%= composed_plurname(type.name) %></a>
              <div class="v2-link-on-active">
                <%= link_to "#typeEditModal", class: "v3-link", data: { toggle: "modal", id: "#{type.id}" } do %>
                    <div class="text-on-edit-hover" style="color: <%= type.color %>;">Modifier</div>
                    <i class="fa fa-pencil" aria-hidden="true" style="color: <%= type.color %>;"></i>
                <% end %>
                <%= link_to type_path(type), method: :delete, class: "v3-link", data: { confirm: "Etes-vous sûr de vouloir supprimer cette catégorie ?" } do %>
                    <div class="text-on-destroy-hover" style="color: <%= type.color %>;">Supprimer</div>
                    <i class="fa fa-times" aria-hidden="true" style="color: <%= type.color %>;"></i>
                <% end %>
              </div>
            </li>
        <% else %>
            <li role="presentation" class="reset-active-on-tab">
              <div class="menu-icon-show" style="color: <%= type.color %>;"><i class="fa fa-circle" aria-hidden="true"></i></div>
              <div class="index-on-navtabs" style="color: <%= type.color %>;"><%= "#{index + 1}" %></div>
              <a href="#<%= type.id %>" data-toggle="tab" class="reset-active-on-tab"><%= composed_plurname(type.name) %></a>
              <div class="v2-link-on-active">
                <%= link_to "#typeEditModal", class: "v3-link", data: { toggle: "modal", id: "#{type.id}" } do %>
                  <div class="text-on-edit-hover" style="color: <%= type.color %>;">Modifier</div>
                    <i class="fa fa-pencil" aria-hidden="true" style="color: <%= type.color %>;"></i>
                <% end %>
                <%= link_to type_path(type), method: :delete, class: "v3-link", data: { confirm: "Etes-vous sûr de vouloir supprimer cette catégorie ?" } do %>
                    <div class="text-on-destroy-hover" style="color: <%= type.color %>;">Supprimer</div>
                    <i class="fa fa-times" aria-hidden="true" style="color: <%= type.color %>;"></i>
                <% end %>
              </div>
            </li>
        <% end %>
      <% end %>
      </ul>
    </div>





        </div>
  </div>
