<%= simple_form_for (@type) do |f| %>

<div class="modal-header-custom">
  <div class="header-hard-dashboard" style="opacity: 0.8;">Modifier la catégorie</div>
  <div style="margin-left: 8px;margin-right: 8px;padding-top: 4px;"><i class="fa fa-angle-right" aria-hidden="true"></i></div>
  <div class="header-hard-dashboard" style="opacity: 0.4;"><%= @type.name %></div>
  <button class="close" data-dismiss="modal">×</button>
</div>


<div class="modal-body-custom">
  <div class="edit-product-container">
    <div class="label-on-modal-dashboard">Nom</div>
    <%= f.input :name, label: false %>

    <div class="input-container">
      <div class="label-on-modal-dashboard">Couleur</div>
      <%= f.input :color, label: false %>
    </div>

  </div>
  <%= render "color_picker_edit" %>
</div>

<div class="modal-footer-custom">
  <%= f.submit "Valider", :class => 'submit-button-on-modal' %>
</div>

<% end %>
