<%= simple_form_for (@type) do |f| %>

<div class="modal-header">
  <div class="header-hard-dashboard" style="opacity: 0.8;">Créer une catégorie</div>
  <button class="close" data-dismiss="modal">×</button>
</div>


<div class="modal-body">
  <div class="edit-product-container">
    <div class="label-on-modal-dashboard">Nom</div>
    <%= f.input :name, label: false %>

    <div class="input-container">
      <div class="label-on-modal-dashboard">Couleur</div>
      <%= f.input :color, label: false %>
    </div>
  </div>
  <%= render "color_picker" %>
</div>

<div class="modal-footer">
  <%= f.submit "Créer une catégorie", :class => 'submit-button-on-modal' %>
</div>

<% end %>

