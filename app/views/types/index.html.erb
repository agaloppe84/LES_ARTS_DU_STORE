
<div class="fullpage-show">


  <div class="type-index-v2-header">
    <div class="leftblock-content-show">
      <ul class="nav nav-pills">
      <% @types.each do |type| %>
        <% if type == @types.first %>
            <li role="presentation" class="active">
              <div class="menu-index-active" style="background-image: url(<%=  typeicon(type)  %>);"></div>
              <a href="#<%= type.id %>" data-toggle="tab"><%= type.plurname %></a>
            </li>
        <% else %>
            <li role="presentation">
              <div class="menu-index-active" style="background-image: url(<%=  typeicon(type)  %>);"></div>
              <a href="#<%= type.id %>" data-toggle="tab"><%= type.plurname %></a>
            </li>
        <% end %>
      <% end %>
      </ul>
    </div>
  </div>


  <div class="fullpage-rightblock">
    <div class="tab-content">
      <% @types.each do |type| %>
      <% if type == @types.first %>

    <div role="tabpanel" class="tab-pane active" id="<%= type.id %>">
        <div class="banner-on-index" style="background-image: url(<%=  cl_image_path type.albums.last.photos.sample.path  %>);">
            <div class="banner-on-index-content-v2">
              <%= type.plurname %>
            </div>
        </div>

        <div class="navtab-big-title">
          <div class="menu-index-active-v2" style="background-image: url(<%=  typeicon(type)  %>);"></div>
          <div class="big-title-v2"><%= type.plurname %></div>
        </div>

      <div class="index-new-container">
        <% type.products.each do |product| %>
            <div class="card">

              <div class="card-bottom">
                <div class="card-bottom-item">
                  <div class="button-two"><%= product.title %></div>
                  <% if product.brands.empty? %>
                  <% else %>
                    <div class="brand-name-on-index"><%= product.brands.last.name %></div>
                  <% end %>
                </div>

                <div class="description-body">
                  <%= product.description %>
                </div>

                <div class="card-bottom-item-three product-modal-button-<%= product.id %>" style="color: <%= type.color %>;cursor: pointer;text-shadow: none;">
                  <i class="fa fa-plus" aria-hidden="true"></i>
                </div>
              </div>

              <div class="card-top image-center" style="background-image: url(<%= cl_image_path product.photos.last.path  %>);">
                <div class="infos-on-hover">
                  <div class="infos-volets">
                    <% product.infos.first(5).each do |info| %>
                      <div class="infos-item-boob">
                        <div class="infos-icon-boob" style="background-image: url(<%= cl_image_path info.icon.path %>);"></div>
                        <div class="infos-big-boob"><%= info.title %>&nbsp;</div>
                        <div class="infos-small-boob"><%= info.content %>&nbsp;</div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>



          <% end %>
        </div>
    </div>

  <% else %>

    <div role="tabpanel" class="tab-pane" id="<%= type.id %>">
        <div class="banner-on-index" style="background-image: url(<%=cl_image_path type.albums.last.photos.sample.path if type.albums.any?  %>);background-color: <%= type.color %>">
            <div class="banner-on-index-content"></div>
        </div>

        <div class="navtab-big-title">
          <div class="menu-index-active-v2" style="background-image: url(<%=  typeicon(type)  %>);"></div>
          <div class="big-title-v2"><%= type.plurname %></div>
        </div>

        <div class="index-new-container">
        <% type.products.each do |product| %>
            <div class="card">

              <div class="card-bottom">
                <div class="card-bottom-item">
                  <div class="button-two"><%= product.title %></div>
                  <% if product.brands.empty? %>
                  <% else %>
                    <div class="brand-name-on-index"><%= product.brands.last.name %></div>
                  <% end %>
                </div>

                <div class="description-body">
                  <%= product.description %>
                </div>

                <div class="card-bottom-item-three product-modal-button-<%= product.id %>" style="color: <%= type.color %>;cursor: pointer;text-shadow: none;">
                   <i class="fa fa-plus" aria-hidden="true"></i>
                </div>
              </div>

              <div class="card-top image-center" style="background-image: url(<%= cl_image_path product.photos.last.path  %>);">
                <div class="infos-on-hover">
                  <div class="infos-volets">
                    <% product.infos.first(5).each do |info| %>
                      <div class="infos-item-boob">
                        <div class="infos-icon-boob" style="background-image: url(<%= cl_image_path info.icon.path %>);"></div>
                        <div class="infos-big-boob"><%= info.title %>&nbsp;</div>
                        <div class="infos-small-boob"><%= info.content %>&nbsp;</div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>


        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
</div>








