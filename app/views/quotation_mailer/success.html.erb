<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

<div class="mailer-container" style="display: flex;align-items: center;justify-content: center;flex-direction: column;width: 100%;height: 100%;padding-top: 10%;">

  <%= image_tag("#{Rails.root}/app/assets/images/ttr-test.svg", size: "80x80") %>
  <div style="font-family: 'Roboto';font-size: 18px;font-weight: 600;margin-bottom: 80px;margin-top: 10px;">Les artisans du store</div>

  <div class="mailer-header" style="display: flex;align-items: center;justify-content: center;">
    <div class="mailer-user-name" style="font-family: 'Roboto';font-size: 15px;">Merci &nbsp</div>
    <div class="mailer-user-name" style="font-family: 'Roboto';font-size: 15px;font-weight: 600;"><%= @quotation.name.capitalize %>&nbsp</div>
    <div class="mailer-user-name" style="font-family: 'Roboto';font-size: 15px;font-weight: 600;"><%= @quotation.firstname %>,</div>
  </div>

  <div class="mailer-header" style="display: flex;align-items: center;justify-content: center;margin-top: 10px;">
    <div class="mailer-user-name" style="font-family: 'Roboto';font-size: 15px;">Votre demande concernant le produit &nbsp</div>
    <div class="mailer-user-name" style="font-family: 'Roboto';font-size: 15px;font-weight: 600;"><%= @quotation.blindttype %>&nbsp</div>
    <div class="mailer-user-name" style="font-family: 'Roboto';font-size: 15px;">à été prise en compte</div>
  </div>


</div>
