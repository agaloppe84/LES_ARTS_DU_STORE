







<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="pathfilter-fullpage">
    <div class="pathfilter-container">

      <div class="pathfilter-header">
        <div class="pathfilter-header-title">Connexion Admin</div>
      </div>

      <div class="pathfilter-choice">

          <div class="pathfilter-choice-left-form">
            <div class="pathfilter-choice-title"><%= f.input :email, required: false, autofocus: true %></div>
          </div>

          <div class="pathfilter-choice-right-form">
            <div class="pathfilter-choice-title"><%= f.input :password, required: false %></div>
          </div>

      </div>

      <div class="pathfilter-bottom-link">
        <%= f.button :submit, "connexion", class: "pathfilter-bottom-btn-form" %>
      </div>

    </div>
  </div>

<% end %>
