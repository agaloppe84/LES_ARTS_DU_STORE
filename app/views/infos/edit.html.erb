<div class="header-on-modal-2">
    <div class="header-hard-dashboard" style="opacity: 0.8;font-size: 13px;"><%= "Produit" %></div>
    <div style="margin-left: 8px;margin-right: 8px;padding-top: 2px;opacity: 0.8;"><i class="fa fa-angle-right" aria-hidden="true"></i></div>
    <div class="header-hard-dashboard" style="font-size: 13px;opacity: 0.4;color: <%= @product.type.color %>"><%= @product.title.capitalize %></div>
</div>






<div class="form-in-modal">

<%= simple_form_for [@product.type, @product, @info] do |f| %>

  <div class="container-without-button">

    <div class="label-on-modal-dashboard">Nom de l'info</div>
    <%= f.input :title, label: false %>

    <div class="label-on-modal-dashboard">Contenu</div>
    <%= f.input :content, label: false %>

    <div class="label-on-modal-dashboard">Icone</div>
    <%= f.input :icon, as: :attachinary, label: false %>


  </div>


    <%= f.submit "Modifier #{@info.title}", :class => 'submit-button-on-modal' %>


<% end %>

</div>





