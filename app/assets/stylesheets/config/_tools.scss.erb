// Ruby ranges
<% n1 = (0..500) %>
<% n2 = (0..100) %>
<% n3 = (1..20) %>
<% n4 = (0..50) %>
<% n5 = (1..10) %>
<% n6 = (0.30..4.00) %>
<% n7 = (0.1..2.0) %>
<% n8 = (100..700) %>
<% n9 = (0.0..1.0) %>


// Ruby variables for classes builds
<% width_numbers = n1.step(5) %>
<% height_numbers = n1.step(5) %>
<% width_percent_numbers = n2.step(5) %>
<% height_percent_numbers = n2.step(5) %>
<% fsize_numbers = n3 %>
<% zindex_numbers = n3 %>
<% border_size_numbers = n5 %>
<% padding_numbers = n2.step(5) %>
<% margin_numbers = n2.step(5) %>
<% fontsize_numbers = n4 %>
<% fontsize_numbers_em = n6.step(0.05) %>
<% radius_numbers = n3 %>
<% radius_percent_numbers = n4.step(5) %>
<% transition_numbers = n7.step(0.1) %>
<% font_weight_numbers = n8.step(100) %>
<% opacity_numbers = n9.step(0.1) %>
<% icons_size_numbers = n4.step(5) %>
<% active_target_numbers = n3 %>





// Add border-colors here in a ruby variable as string
<% border_color01 = "rgba(255, 255, 255, 1)" %>
<% border_color02 = "rgba(200, 200, 200, 1)" %>
<% border_color03 = "rgba(155, 155, 155, 1)" %>
<% border_color04 = "rgba(100, 100, 100, 1)" %>
<% border_color05 = "rgba(55, 55, 55, 1)" %>
<% border_color06 = "rgba(1, 1, 1, 1)" %>

// Add the border color variable in this array
<% border_colors = [border_color01, border_color02, border_color03, border_color04, border_color05, border_color06] %>





// Add background-colors here in a ruby variable as string
<% bc_color01 = "#34495D" %>
<% bc_color02 = "#2C3D4F" %>
<% bc_color03 = "#EE7738" %>
<% bc_color04 = "#34495D" %>
<% bc_color05 = "#2C3D4F" %>
<% bc_color06 = "#EE7738" %>

// Add the background color variable in this array
<% back_colors = [bc_color01, bc_color02, bc_color03, bc_color04, bc_color05, bc_color06] %>




// Add text colors here in a ruby variable as string
<% color01 = "#34495D" %>
<% color02 = "#2C3D4F" %>
<% color03 = "#EE7738" %>
<% color04 = "#34495D" %>
<% color05 = "#2C3D4F" %>
<% color06 = "#EE7738" %>

// Add the text color variable in this array
<% text_colors = [color01, color02, color03, color04, color05, color06] %>




// Add fonts here in a ruby variable as string
<% font01 = "Circular" %>
<% font02 = "Roboto" %>
<% font03 = "Montserrat" %>

// Add the font variable in this array
<% fonts = [font01, font02, font03] %>





// Add icon here in a ruby variable (File must be in assets/images/)
<% icon01 = "arrows.svg" %>
<% icon02 = "certif.svg" %>
<% icon03 = "cold.svg" %>
<% icon04 = "flower.svg" %>
<% icon05 = "hot.svg" %>
<% icon06 = "location.svg" %>

// Add the icon variable in this array
<% icons = [icon01, icon02, icon03, icon04, icon05, icon06] %>









// active targets triggered by active-trig // Limited to 20 in tools.js.erb
.active-targ-1 {
  opacity: 0.5;
  transition: 0.3s ease;
}
.active-targ-2 {
  opacity: 0.2;
  transition: 0.3s ease;
}
.active-targ-3 {
  opacity: 0.5;
  transition: 0.3s ease;
}
.active-targ-4 {
  opacity: 0.5;
  transition: 0.3s ease;
}









// Icons
<% icons.each_with_index do |icon, index| %>
  .icon<%= index + 1 %> {
    <% icons_size_numbers.each do |size|%>
      &-w<%= size %> {
        width: <%= size %>px;
        height: <%= size %>px;
        background: image-url("<%= icon %>");
      }
    <% end %>
  }
<% end %>




// Opacity
<% opacity_numbers.each do |number| %>
  .opa<%= (number * 100).to_i %> {
    opacity: <%= number.round(1) %>;
  }
<% end %>



// Colors
<% back_colors.each_with_index do |color, index| %>
  .back-color<%= index + 1 %> {
    background-color: <%= "#{color}" %>;
  }
<% end %>

<% text_colors.each_with_index do |color, index| %>
  .color<%= index + 1 %> {
    color: <%= "#{color}" %>;
  }
<% end %>




// Font families and font weight
<% fonts.each_with_index do |font, index| %>

      .font<%= index + 1 %>w {
        <% font_weight_numbers.each do |weight| %>
          &<%= weight %> {
            font-weight: <%= weight %>;
            font-family: <%= font %>;
          }
        <% end %>
      }

<% end %>





// Transition time in second
<% transition_numbers.take(9).each do |number| %>
  .trans0<%= (number * 10).to_i %>s {
    transition: <%= number.round(1) %>s ease;
  }
<% end %>

<% transition_numbers.drop(9).each do |number| %>
  .trans<%= (number * 10).to_i %>s {
    transition: <%= number.round(1) %>s ease;
  }
<% end %>



// Border radius px
<% radius_numbers.each do |number| %>
  .br<%= number %>px {
    border-radius: <%= number %>px;
  }
<% end %>

// Border radius percent
<% radius_percent_numbers.each do |number| %>
  .br<%= number %> {
    border-radius: <%= number %>%;
  }
<% end %>

// Font size px
<% fontsize_numbers.each do |number| %>
  .fs<%= number %> {
    font-size: <%= number %>px;
  }
<% end %>

// Font size em
<% fontsize_numbers_em.each do |number| %>
  .fs<%= (number * 100).to_i %>em {
    font-size: <%= number.round(2) %>em;
  }
<% end %>

// Padding px
<% padding_numbers.each do |number| %>
  .p<%= number %> {
    padding: <%= number %>px;
  }
  .pt<%= number %> {
    padding-top: <%= number %>px;
  }
  .pr<%= number %> {
    padding-right: <%= number %>px;
  }
  .pb<%= number %> {
    padding-bottom: <%= number %>px;
  }
  .pl<%= number %> {
    padding-left: <%= number %>px;
  }
<% end %>

// Margin px
<% margin_numbers.each do |number| %>
  .m<%= number %> {
    margin: <%= number %>px;
  }
  .mt<%= number %> {
    margin-top: <%= number %>px;
  }
  .mr<%= number %> {
    margin-right: <%= number %>px;
  }
  .mb<%= number %> {
    margin-bottom: <%= number %>px;
  }
  .ml<%= number %> {
    margin-left: <%= number %>px;
  }
<% end %>

// Width px
<% width_numbers.each do |number| %>
  .w<%= number %>px {
    width: <%= number %>px;
  }
<% end %>

// height px
<% height_numbers.each do |number| %>
  .h<%= number %>px {
    height: <%= number %>px;
  }
<% end %>

// Width percent and vw
<% width_percent_numbers.each do |number| %>
  .w<%= number %> {
    width: <%= number %>%;
  }
  .w<%= number %>vw {
    width: <%= number %>vw;
  }
<% end %>

// Height percent and vh
<% height_percent_numbers.each do |number| %>
  .h<%= number %> {
    height: <%= number %>%;
  }
  .h<%= number %>vh {
    height: <%= number %>vh;
  }
<% end %>

// Flex size
<% fsize_numbers.each do |number| %>
  .fsize-<%= number %> {
    flex: <%= number %>;
  }
<% end %>

// Z-index
<% zindex_numbers.each do |number| %>
  .z<%= number %> {
    z-index: <%= number %>;
  }
<% end %>



// Border size and style
<% border_size_numbers.each do |number| %>
  .bor<%= number %> {
    border: <%= number %>px solid;
    &-t {
      border-top: <%= number %>px solid;
    }
    &-r {
      border-right: <%= number %>px solid;
    }
    &-b {
      border-bottom: <%= number %>px solid;
    }
    &-l {
      border-left: <%= number %>px solid;
    }
  }
<% end %>

// Border color
<% border_colors.each_with_index do |color, index| %>
  .bcolor<%= index + 1 %> {
    border-color: <%= color %>;
  }
<% end %>





// Flex base tools
.flex {
  display : flex;
}

.dir-col {
  flex-direction: column;
}

.dir-row {
  flex-direction: row;
}

.wrap {
  flex-wrap: wrap;
}

.no-wrap {
  flex-wrap: no-wrap;
}


// Flex justify tools
.just-c {
  justify-content: center;
}

.just-s {
  justify-content: flex-start;
}

.just-e {
  justify-content: flex-end;
}

.just-sb {
  justify-content: space-between;
}

.just-sa {
  justify-content: space-around;
}


// Flex align tools
.align-c {
  align-items: center;
}

.align-s {
  align-items: flex-start;
}

.align-e {
  align-items: flex-end;
}

.align-stretch {
  align-items: stretch;
}



// Positions
.p-rel {
  position: relative;
}

.p-abs {
  position: absolute;
}

.p-fix {
  position: fixed;
}


// Overflow scroll
.scroll-x {
  overflow-x: scroll;
}

.scroll-y {
  overflow-y: scroll;
}


// Media queries
@media (max-width: 768px) {
  .mq-dir-col {
    flex-direction: column;
  }
}

@media (max-width: 768px) {
  .mq-dir-row {
    flex-direction: row;
  }
}

<% width_percent_numbers.each do |number| %>
  @media (max-width: 768px) {
    .mq-w<%= number %> {
      width: <%= number %>%;
    }
  }
<% end %>

<% width_numbers.each do |number| %>
  @media (max-width: 768px) {
    .mq-w<%= number %>px {
      width: <%= number %>px;
    }
  }
<% end %>

<% height_percent_numbers.each do |number| %>
  @media (max-width: 768px) {
    .mq-h<%= number %> {
      height: <%= number %>%;
    }
  }
<% end %>

<% height_numbers.each do |number| %>
  @media (max-width: 768px) {
    .mq-h<%= number %>px {
      height: <%= number %>px;
